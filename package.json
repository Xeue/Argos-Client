{
  "name": "argos",
  "version": "3.15.0",
  "description": "OB/Flypack Monitoring",
  "main": "main.js",
  "type": "module",
  "dependencies": {
    "auto-launch": "^5.0.6",
    "aws-sdk": "^2.1450.0",
    "ejs": "^3.1.9",
    "electron-ejs": "^1.2.1",
    "express": "^4.18.2",
    "mica-electron": "^1.5.16",
    "ping": "^0.4.4",
    "ws": "^8.13.0",
    "xeue-config": "^2.2.4",
    "xeue-logs": "^2.3.1",
    "xeue-sql": "^2.0.6",
    "xeue-webserver": "^2.0.2"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder --win",
    "buildlinux": "electron-builder --linux",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.xeue.argos",
    "productName": "Argos",
    "files": [
      "views/*",
      "node_modules/*",
      "static/*",
      "**/*.js"
    ],
    "win": {
      "icon": "static/img/icon/icon.ico",
      "asarUnpack": "**/lib/*.exe",
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "Argos-v${version}.exe",
      "requestExecutionLevel": "admin"
    },
    "linux": {
      "icon": "static/img/icon/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraResources": [
      {
        "from": "static",
        "to": "static"
      },
      {
        "from": "views",
        "to": "views"
      }
    ]
  },
  "author": "Sam Chilton & Ollie Quirke",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7"
  }
}
