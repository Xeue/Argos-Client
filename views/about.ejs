<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="dark">

    <!-- Bootstrap CSS -->
    <link href="lib/bootstrap.min.css" rel="stylesheet" type="text/css">
	<link href="lib/jsoneditor.css" rel="stylesheet" type="text/css">
    <link href="css/web.css" rel="stylesheet">
    <script type="text/javascript" src="lib/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="lib/bootstrap.min.js"></script>
	<script type="text/javascript" src="lib/jsoneditor.js"></script>
    <script type="text/javascript" src="lib/cookie.js"></script>
    <script type="text/javascript">
		const about = <%- JSON.stringify(aboutInfo) %>;
		const options = {
			'mode': 'tree',
			'mainMenuBar': false,
			'navigationBar': false
		};
		$(document).ready(function() {
			const container = document.getElementById('aboutInfo');
			const editor = new JSONEditor(container, options, about);
			editor.expand({
				"path": ['Config'],
				"isExpand": true,
				"recursive": false
			});
		})
    </script>
    <title><%=systemName%> About</title>
    <link id="favicon_48" rel="icon" href="img/icon/icon.svg" sizes="256x256">
    <link rel="manifest" href="manifest.json">
</head>

<body class="bg-dark h-100 d-flex flex-column user-select-none">
    <div id="loading" class="hidden"></div>

    <nav class="drag navbar navbar-expand-lg navbar-dark bg-title px-2 justify-content-between">
        <div class="d-flex align-items-center">
			<a class="navbar-brand" href="#">
				<img src="img/icon/icon.svg" class="d-inline-block align-top" alt="" width="30" height="30">
				<%-systemName%>
			</a>
		</div>
    </nav>

    <main>
		<div id="aboutInfo"></div>
	</main>
</body>

</html>