<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="lib/bootstrap.min.css" rel="stylesheet" type="text/css">
	<link href="lib/jsoneditor.css" rel="stylesheet" type="text/css">
    <link href="css/web.css" rel="stylesheet">
    <script type="text/javascript" src="lib/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="lib/bootstrap.min.js"></script>
	<script type="text/javascript" src="lib/jsoneditor.js"></script>
    <script type="text/javascript">
		const data = <%- JSON.stringify(data) %>;
		const options = {
			'mode': 'tree',
			'mainMenuBar': false,
			'navigationBar': false
		};
		$(document).ready(function() {
			const container = document.getElementById('dataInfo');
			const editor = new JSONEditor(container, options, data);
		})
    </script>
    <title><%=systemName%> Data</title>
    <link id="favicon_48" rel="icon" href="img/icon/icon.svg" sizes="256x256">
    <link rel="manifest" href="manifest.json">
</head>

<body class="h-100 d-flex flex-column user-select-none <%-background%>" data-bs-theme="dark">
    <div id="loading" class="hidden"></div>

    <nav class="drag navbar bg-title px-2 border-bottom py-0">
        <div class="d-flex align-items-center">
			<a class="navbar-brand" href="#">
				<img src="img/icon/icon.svg" class="d-inline-block align-top" alt="" width="30" height="30">
				Argos - Data
			</a>
		</div>
    </nav>

    <main class="overflow-auto">
		<div id="dataInfo"></div>
	</main>
</body>

</html>