<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="lib/bootstrap.min.css" rel="stylesheet">
    <link href="lib/jsoneditor.css" rel="stylesheet">
    <link href="css/ui.css" rel="stylesheet">
    <script type="text/javascript">
        let Switches = [
            <% Object.keys(switches).forEach(function(prop) { %>
                "<%- switches[prop].Name%>",
            <% }); %>
        ]
        let servers = ["<%=webSocketEndpoint%>"];
        let currentSystem = "<%=systemName%>";
    </script>
    <script type="text/javascript" src="lib/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="lib/bootstrap.min.js"></script>
    <script type="text/javascript" src="lib/ejs.js"></script>
    <script type="text/javascript" src="lib/crypto-js.min.js"></script>
    <script type="text/javascript" src="lib/commonWS.js"></script>
    <script type="text/javascript" src="lib/chart.js"></script>
    <script type="text/javascript" src="lib/moment.js"></script>
    <script type="text/javascript" src="lib/chart-adapter-moment.js"></script>
    <script type="text/javascript" src="lib/jsoneditor.js"></script>
    <script type="text/javascript" src="ui.js"></script>

    <title>Argos</title>
    <link id="favicon_48" rel="icon" href="img/icon/network-48.png" sizes="48x48">
    <link id="favicon_96" rel="icon" href="img/icon/network-96.png" sizes="96x96">
</head>

<body class="bg-dark">
    <div id="loading" class="hidden"></div>

    <main class="container-fluid bg-dark">
        <section class="row mt-1">
            <div class="btn-group">
                <div class="w-auto" id="broken"></div>
                <div class="w-auto ms-2" id="webBroken"></div>
            </div>
            <button id="toggleConfig"></button>
        </section>
        <section class="mainCont">
            <div class="text-light text-muted" id="col-alive">
                <h4>Missing devices</h4>
                <span class="text-muted">Last updated <span id="lastAlive"></span></span>
                <table id="alive" class="table table-dark text-muted">
                    <thead>
                        <th scope="col">Name</th>
                        <% Object.keys(switches).forEach(function(prop) { %>
                            <th scope="col"><%- switches[prop].Name%></th>
                        <% }); %>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="text-light text-muted" id="col-mac">
                <h4>MAC flap</h4>
                <span class="text-muted">Last updated <span id="lastMac"></span></span>
                <table id="mac" class="table table-dark text-muted">
                    <thead>
                        <th scope="col">Switch</th>
                        <th scope="col">Port</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Phy State</th>
                        <th scope="col">Last Change</th>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="text-light text-muted" id="col-phy">
                <h4>PHY FEC uncorrected errors</h4>
                <span class="text-muted">Last updated <span id="lastPhy"></span></span>
                <table id="phy" class="table table-dark text-muted">
                    <thead>
                        <th scope="col">Switch</th>
                        <th scope="col">Port</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Changes</th>
                        <th scope="col">Last Change</th>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="text-light text-muted" id="col-ups">
                <h4>UPS status</h4>
                <span class="text-muted">Last updated <span id="lastUps"></span></span>
                <table id="ups" class="table table-dark text-muted">
                    <thead>
                        <th scope="col">Name</th>
                        <th scope="col">Input</th>
                        <th scope="col">Output</th>
                        <th scope="col">Autonomy</th>
                        <th scope="col">Load</th>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="text-light text-muted" id="col-tra">
                <h4>Low fibre RX</h4>
                <span class="text-muted">Last updated <span id="lastTra"></span></span>
                <table id="tra" class="table table-dark text-muted">
                    <thead>
                        <th scope="col">Switch</th>
                        <th scope="col">Port</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">RX power</th>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="text-light" id="col-hot">
                <h4>IQ Frame Temperatures</h4>
                <span class="text-muted">Last updated <span id="lastHot"></span></span>
                <canvas id="tempChart"></canvas>
                <div class="buttonBox">
                  <button class="tempBut btn btn-secondary btn-sm" data-time="2419200">Last Month</button>
                  <button class="tempBut btn btn-secondary btn-sm" data-time="604800">Last Week</button>
                  <button class="tempBut btn btn-secondary btn-sm" data-time="172800">2 Days</button>
                  <button class="tempBut btn btn-secondary btn-sm" data-time="86400">1 Day</button>
                  <button class="tempBut btn btn-secondary btn-sm" data-time="43200">12 Hours</button>
                  <button class="tempBut btn btn-secondary btn-sm" data-time="21600">6 Hours</button>
                  <button class="tempBut btn btn-secondary btn-sm" data-time="7200">2 Hours</button>
                </div>
            </div>
            <% if (webEnabled) { %>
                <div class="text-light" id="col-ping">
                    <h4>Argos to internet pings</h4>
                    <span class="text-muted">Last updated <span id="lastPing"></span></span>
                    <canvas id="pingChart"></canvas>
                    <div class="buttonBox">
                      <button class="pingBut btn btn-secondary btn-sm" data-time="2419200">Last Month</button>
                      <button class="pingBut btn btn-secondary btn-sm" data-time="604800">Last Week</button>
                      <button class="pingBut btn btn-secondary btn-sm" data-time="172800">2 Days</button>
                      <button class="pingBut btn btn-secondary btn-sm" data-time="86400">1 Day</button>
                      <button class="pingBut btn btn-secondary btn-sm" data-time="43200">12 Hours</button>
                      <button class="pingBut btn btn-secondary btn-sm" data-time="21600">6 Hours</button>
                      <button class="pingBut btn btn-secondary btn-sm" data-time="7200">2 Hours</button>
                      <button class="pingBut btn btn-secondary btn-sm" data-time="1800">30 Mins</button>
                    </div>
                </div>
                <div class="text-light" id="col-online">
                    <h4>Argos boots</h4>
                    <canvas id="bootChart"></canvas>
                    <pre class="infoBox" id="bootTime"></pre>
                </div>
            <% } %>
        </section>
    </main>
    
    <article id="config" class="overflow-auto hidden">
        <section class="bg-dark text-light alert text-nowrap container">
            <div class="row mt-2">
                <h3 class="w-50">Edit Devices</h3>
                <div class="w-50 text-end px-4">
                    <button id="closeConfig" class="text-danger px-4 btn-close btn bg-danger"></button>
                </div>
            </div>

            <div class="nav nav-tabs nav-justified" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-switches-tab" data-bs-toggle="tab" data-bs-target="#nav-switches" type="button" role="tab" aria-controls="nav-switches" aria-selected="true">Switches</button>
                <button class="nav-link" id="nav-devices-tab" data-bs-toggle="tab" data-bs-target="#nav-devices" type="button" role="tab" aria-controls="nav-devices" aria-selected="false">Devices</button>
                <button class="nav-link" id="nav-ups-tab" data-bs-toggle="tab" data-bs-target="#nav-ups" type="button" role="tab" aria-controls="nav-ups" aria-selected="false">Ups</button>
                <button class="nav-link" id="nav-temperatures-tab" data-bs-toggle="tab" data-bs-target="#nav-temperatures" type="button" role="tab" aria-controls="nav-temperatures" aria-selected="false">Temperatures</button>
            </div>

            <section class="tab-content">
                <div class="tab-pane fade show active" id="nav-switches" data-editor="switches" role="tabpanel" aria-labelledby="nav-switches-tab">
                    <div class="mt-3 mx-0">
                        <button class="btn btn-primary toggleTableRaw" type="button" data-mode="table">Show Raw</button>
                        <button class="btn btn-primary tableNew" type="button">Add new</button>
                        <button class="btn btn-success tableSave" type="button">Save</button>
                    </div>
                    <div class="dataTable collapse show">
                        <table class="table table-dark" data-editor="switches">
                            <thead>
                                <tr>
                                    <th class="">Name</th>
                                    <th class="">IP</th>
                                    <th class="">Username</th>
                                    <th class="">Password</th>
                                    <th class=""></th>
                                </tr>
                            </thead>
                            <tbody id="configSwitches"></tbody>
                        </table>
                    </div>
                    <div class="dataRaw collapse mt-3">
                        <div id="configSwitchesRaw"></div>
                    </div>
                </div>

                <div class="tab-pane fade" id="nav-devices" data-editor="devices" role="tabpanel" aria-labelledby="nav-devices-tab">
                    <div class="mt-3 mx-0">
                        <button class="btn btn-primary toggleTableRaw" type="button" data-mode="table">Show Raw</button>
                        <button class="btn btn-primary tableNew" type="button">Add new</button>
                        <button class="btn btn-success tableSave" type="button">Save</button>
                    </div>
                    <div class="dataTable collapse show">
                        <table class="table table-dark" data-editor="devices">
                            <thead>
                                <tr>
                                    <th class="w-25">Hostname</th>
                                    <th class="w-25">Description</th>
                                    <th class="w-25"></th>
                                </tr>
                            </thead>
                            <tbody id="configDevices"></tbody>
                        </table>
                    </div>
                    <div class="dataRaw collapse mt-3">
                        <div id="configDevicesRaw"></div>
                    </div>
                </div>

                <div class="tab-pane fade" id="nav-ups" data-editor="ups" role="tabpanel" aria-labelledby="nav-ups-tab">
                    <div class="mt-3 mx-0">
                        <button class="btn btn-primary toggleTableRaw" type="button" data-mode="table">Show Raw</button>
                        <button class="btn btn-primary tableNew" type="button">Add new</button>
                        <button class="btn btn-success tableSave" type="button">Save</button>
                    </div>
                    <div class="dataTable collapse show">
                        <table class="table table-dark" data-editor="ups">
                            <thead>
                                <tr>
                                    <th class="w-25">Name</th>
                                    <th class="w-25">IP</th>
                                    <th class="w-25">
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="configUps"></tbody>
                       </table>
                    </div>
                    <div class="dataRaw collapse mt-3">
                        <div id="configUpsRaw"></div>
                    </div>
                </div>

                <div class="tab-pane fade" id="nav-temperatures" data-editor="frames" role="tabpanel" aria-labelledby="nav-temperatures-tab">
                    <div class="mt-3 mx-0">
                        <button class="btn btn-primary toggleTableRaw" type="button" data-mode="table">Show Raw</button>
                        <button class="btn btn-primary tableNew" type="button">Add new</button>
                        <button class="btn btn-success tableSave" type="button">Save</button>
                    </div>
                    <div class="dataTable collapse show">
                        <table class="table table-dark" data-editor="frames">
                            <thead>
                                <tr>
                                    <th class="w-25">Name</th>
                                    <th class="w-25">IP</th>
                                    <th class="w-25"></th>
                                </tr>
                            </thead>
                            <tbody id="configFrames"></tbody>
                        </table>
                    </div>
                    <div class="dataRaw collapse mt-3">
                        <div id="configFramesRaw"></div>
                    </div>
                </div>
            </section>
        </section>
    </article>

    <!--<figure style="position: fixed; bottom: 0px; right: 0px;"><img src="media/argos_gray.png"></figure>-->
</body>

</html>