<article id="config" class="overflow-auto hidden pt-5">
    <section class="bg-dark text-light alert text-nowrap container flex-column d-flex mb-0">
        <div class="row mt-2">
            <h3 class="w-50">Edit Devices</h3>
        </div>

        <div class="nav nav-pills mb-2 nav-justified" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-switches-tab" data-bs-toggle="tab" data-bs-target="#nav-switches" type="button" role="tab" aria-controls="nav-switches" aria-selected="true">Core Switches</button>
            <button class="nav-link" id="nav-ports-tab" data-bs-toggle="tab" data-bs-target="#nav-ports" type="button" role="tab" aria-controls="nav-ports" aria-selected="false">Port Monitoring</button>
            <button class="nav-link" id="nav-devices-tab" data-bs-toggle="tab" data-bs-target="#nav-devices" type="button" role="tab" aria-controls="nav-devices" aria-selected="false">Devices</button>
            <button class="nav-link" id="nav-ups-tab" data-bs-toggle="tab" data-bs-target="#nav-ups" type="button" role="tab" aria-controls="nav-ups" aria-selected="false">Ups</button>
            <button class="nav-link" id="nav-temperatures-tab" data-bs-toggle="tab" data-bs-target="#nav-temperatures" type="button" role="tab" aria-controls="nav-temperatures" aria-selected="false">Temperatures</button>
            <button class="nav-link" id="nav-ping-config-tab" data-bs-toggle="tab" data-bs-target="#nav-ping-config" type="button" role="tab" aria-controls="nav-ping-config" aria-selected="false">Pings</button>
        </div>

        <section class="tab-content overflow-auto">
            <div class="tab-pane fade show active" id="nav-switches" data-editor="switches" role="tabpanel" aria-labelledby="nav-switches-tab">
                <div class="dataTable collapse show">
                    <table class="table table-dark table-sm" data-editor="switches">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th class="">Name</th>
                                <th class="">IP</th>
                                <th class="">Username</th>
                                <th class="">Password</th>
                                <th class="">Type</th>
                                <th class="">OS</th>
                                <th class=""></th>
                            </tr>
                        </thead>
                        <tbody id="configSwitches" data-template="switch"></tbody>
                    </table>
                </div>
                <div class="dataRaw collapse mt-3">
                    <div id="configSwitchesRaw"></div>
                </div>
            </div>

            <div class="tab-pane fade" id="nav-ports" data-editor="ports" role="tabpanel" aria-labelledby="nav-ports-tab">
                <div class="dataTable collapse show">
                    <table class="table table-dark table-sm" data-editor="ports">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th class="w-25">Switch</th>
                                <th class="w-25">Port</th>
                                <th class="w-25"></th>
                            </tr>
                        </thead>
                        <tbody id="configPorts" data-template="ports"></tbody>
                    </table>
                </div>
                <div class="dataRaw collapse mt-3">
                    <div id="configPortsRaw"></div>
                </div>
            </div>

            <div class="tab-pane fade" id="nav-devices" data-editor="devices" role="tabpanel" aria-labelledby="nav-devices-tab">
                <div class="dataTable collapse show">
                    <table class="table table-dark table-sm" data-editor="devices">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th class="w-25">Hostname</th>
                                <th class="w-25">Description</th>
                                <th class="w-25"></th>
                            </tr>
                        </thead>
                        <tbody id="configDevices" data-template="devices"></tbody>
                    </table>
                </div>
                <div class="dataRaw collapse mt-3">
                    <div id="configDevicesRaw"></div>
                </div>
            </div>

            <div class="tab-pane fade" id="nav-ups" data-editor="ups" role="tabpanel" aria-labelledby="nav-ups-tab">
                <div class="dataTable collapse show">
                    <table class="table table-dark table-sm" data-editor="ups">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th class="w-25">Name</th>
                                <th class="w-25">IP</th>
                                <th class="w-25">
                                </th>
                            </tr>
                        </thead>
                        <tbody id="configUps" data-template="nameIP"></tbody>
                   </table>
                </div>
                <div class="dataRaw collapse mt-3">
                    <div id="configUpsRaw"></div>
                </div>
            </div>

            <div class="tab-pane fade" id="nav-temperatures" data-editor="frames" role="tabpanel" aria-labelledby="nav-temperatures-tab">
                <div class="dataTable collapse show">
                    <table class="table table-dark table-sm" data-editor="frames">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th class="w-25">Name</th>
                                <th class="w-25">IP</th>
                                <th class="w-25"></th>
                            </tr>
                        </thead>
                        <tbody id="configFrames" data-template="nameIP"></tbody>
                    </table>
                </div>
                <div class="dataRaw collapse mt-3">
                    <div id="configFramesRaw"></div>
                </div>
            </div>

            <div class="tab-pane fade" id="nav-ping-config" data-editor="pings" role="tabpanel" aria-labelledby="nav-ping-config-tab">
                <div class="dataTable collapse show">
                    <table class="table table-dark table-sm" data-editor="pings">
                        <thead class="position-sticky top-0">
                            <tr>
                                <th class="">Name</th>
                                <th class="">IP</th>
                                <th class="">SSH</th>
                                <th class="">HTTP</th>
                                <th class="">HTTPS</th>
                                <th class=""></th>
                            </tr>
                        </thead>
                        <tbody id="configPings" data-template="pings"></tbody>
                    </table>
                </div>
                <div class="dataRaw collapse mt-3">
                    <div id="configPingsRaw"></div>
                </div>
            </div>
        </section>

        <div class="mt-3 mx-0 align-self-end d-flex gap-1 flex-wrap">
            <input id="csvUpload" class="form-control w-auto" type="file" accept="text/csv" name="csvUpload" size="30">
            <button class="btn btn-primary tableImport" type="button" disabled>Import CSV</button>
            <button class="btn btn-primary tableExport" type="button">Export as CSV</button>
            <button class="btn btn-primary toggleTableRaw" type="button">Toggle View</button>
            <button class="btn btn-primary tableNew" type="button">Add new</button>
            <button class="btn btn-success tableSave" type="button">Save</button>
            <button id="closeConfig" class="btn btn-danger">Close</button>
            <div id="testId"></div>
        </div>
    </section>
</article>